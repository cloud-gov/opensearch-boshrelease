#!/bin/bash

set -e

<% if p('opensearch.node.allow_data') %>
# disable allocations before bringing down data nodes

curl -s -X PUT localhost:9200/_all/_settings \
  -H 'Content-Type: application/json' \
  -d '{"settings": {"index.unassigned.node_left.delayed_timeout": "<%= p("opensearch.recovery.delay_allocation_restart") %>"}}' \
  > /dev/null

<% end %>

<% if p('opensearch.cloud.aws.bucket') != '' and p('opensearch.node.allow_cluster_manager') and spec.bootstrap %>
curl -X DELETE -s localhost:9200/_snapshot/<%= p('opensearch.snapshots.repository') %> > /dev/null
<% end %>

<% if p('opensearch.path_repo') != '' and p('opensearch.node.allow_cluster_manager') and spec.bootstrap %>
curl -X DELETE -s localhost:9200/_snapshot/<%= p('opensearch.snapshots.repository') %> > /dev/null
<% end %>

return_code=$?
echo 0
exit ${return_code}
