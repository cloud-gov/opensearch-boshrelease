#!/bin/bash

set -e
set -x

<% if !p("opensearch-dashboard.health.disable_post_start") %>

echo "Waiting <%= p("opensearch-dashboard.health.timeout") %>s for opensearch-dashboard to accept connections..."
elapsed=0
until [ $elapsed -ge <%= p("opensearch-dashboard.health.timeout") %> ]
do
  # We have to set and unset the 'e' flag around the curl as a return code of 000 (no network) will result in an error.
  # This return code is valid and therefore we want to ignore this as an error.
  set +e
  CODE=`curl -m 1 -s -o /dev/null -w "%{http_code}" http://<%= p("opensearch-dashboard.host") %>:<%= p("opensearch-dashboard.port") %>`
  set -e
  if [[ "$CODE" == "302" ]]; then
    echo Done!
    break
  fi
  echo -n .
  elapsed=$[$elapsed+<%= p("opensearch-dashboard.health.interval") %>]
  sleep <%= p("opensearch-dashboard.health.interval") %>
done

if [ "$elapsed" -ge "<%= p("opensearch-dashboard.health.timeout") %>" ]; then
  echo "ERROR: Cannot connect to opensearch-dashboard. Exiting..."
  exit 1
fi

<% end %>

exit 0
