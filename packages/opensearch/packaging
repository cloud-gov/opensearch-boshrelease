#!/usr/bin/env bash

set -e

tar xzf opensearch-3.5.0-linux-x64.tar.gz -C "$BOSH_INSTALL_TARGET" --strip-components 1

export PATH="${BOSH_INSTALL_TARGET}/bin:${PATH}"
opensearch-plugin remove opensearch-notifications
opensearch-plugin remove opensearch-security-analytics
opensearch-plugin remove opensearch-alerting

echo y | opensearch-plugin install "file://${PWD}/opensearch/opensearch-notifications-3.5.0.0.zip"
echo y | opensearch-plugin install "file://${PWD}/opensearch/opensearch-alerting-3.5.0.0.zip"
