#!/usr/bin/env bash

set -e -x

RAKE_VERSION=$(find ruby -maxdepth 1 -name 'rake-*' | sed 's/ruby\/rake-\(.*\)\.gem/\1/' | head -1)

# shellcheck disable=1090
source "${BOSH_PACKAGES_DIR:-/var/vcap/packages}/ruby-3.1/bosh/compile.env"

gem install "ruby/rake-${RAKE_VERSION}.gem" --local
opensearch_config/bin/build

cp opensearch_config/target/* "${BOSH_INSTALL_TARGET}"
cp opensearch_config/src/logstash-filters/if_it_looks_like_json.conf "${BOSH_INSTALL_TARGET}"
cp opensearch_config/src/logstash-filters/timecop.conf "${BOSH_INSTALL_TARGET}"
cp opensearch_config/src/logstash-filters/deployment.conf "${BOSH_INSTALL_TARGET}"
cp opensearch_config/src/logstash-filters/deployment_lookup.yml "${BOSH_INSTALL_TARGET}"
